<div>
  <%= attachment_image_tag @post, :image %>
  <p>スポット名：<%= @post.title %></p>
  <p>説明：<%= @post.body %></p>
  <p>地図</p>
  <div class="show__address">
  <%= @post.spot.address %>
  </div>
  <div class="show__maps" id="show_map" style="height: 320px; width: 400px;"></div>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post.user == current_user %>
  <%= link_to "削除", post_path(@post), method: :delete %>
  <% end %>
</div>

<div>
<p>コメント件数：<%= @post.post_comments.count %></p>
<% @post.post_comments.each do |post_comment| %>
  <p>gazouireru</p>
  <%= post_comment.user.name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
  <% if post_comment.user == current_user %>
  <div>
    <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete %>
  </div>
  <% end %>
<% end %>
</div>

<div>
<%= form_with(model:[@post, @post_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>