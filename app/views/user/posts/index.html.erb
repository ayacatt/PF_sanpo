<div class='main-container'>
  <div class='row'>
    <div class="col-md-8 offset-md-4 ">
      <%= render 'genres_search', genres: @genres %>
    </div>
  </div>
  
  <div class='row'>
    <div class="col-md-8 offset-md-1">
      <h2>投稿一覧</h2>
    
      <table class="table table-hover table-inverse">
    
        <thead>
          <tr>
          <th>地域</th>
          <th>投稿ユーザー画像</th>
          <th>ユーザーネーム</th>
          <th>投稿画像</th>
          <th>スポット名</th>
          <th>説明</th>
          <th>コメント数</th>
          <th>いいね</th>
          </tr>
        </thead>
    
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            　<td><%= post.genre.name %></td>
              <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag post.user, :profile_image, :fill, 60, 60 , fallback: "no_image.jpg" %></td>
              <% end %>
              <td><%= post.user.name %></td>
              <td><%= link_to post_path(post.id) do %><%= attachment_image_tag post, :image, :fill, 60, 60 , fallback: "no_image.jpg" %></td>
              <% end %>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= link_to "#{post.post_comments.count}", post_path(post.id) %></td>
    
              <td class="favorite-btn-<%= post.id %>"><%= render "user/favorites/favorite-btn", post: post %></td>
    
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
</div>