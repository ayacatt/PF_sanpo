<div class='main-container'>
  <div class='row'>
    <div class="col-md-2">
        <h5>新着投稿</h5>
        <% @posts.each do |post| %>
          <div class="card mb-2">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, format: 'jpg' , fallback: "no_image.jpg", size: "200x180" , class:"card-img-top" %>
            <% end %>
          <div class="card-body">
            <p class="card-text">
          　<p>スポット名：<%= post.title %></p>
            <p>説明：<%= post.body %></p>
            <p>評価：<div class="post-evaluation" data-score="<%= post.evaluation %>"></div></p>
          </div>
          </div>
        <% end %>
    </div>

    <div class="col-md-6">
      <div id='top_map'></div>
    </div>
  </div>
</div>

<style>
#top_map{
    height: 1200px;
    width: 1100px;
}
</style>


<script>
  $('.post-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
</script>