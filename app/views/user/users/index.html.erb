<div class='main-container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h2>ユーザ一覧</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>投稿件数</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
              <td><%= user.name %></td>
              <td><%= user.posts.count %></td>
              <td><%= user.followings.count %></td>
              <td><%= user.followers.count %></td>
              <td>
                <% if current_user != user %>
                  <% if current_user.following?(user) %>
                    <%= link_to "フォロー外す", relationship_path(user.id), method: :delete %>
                  <% else %>
                    <%= link_to "フォローする", relationships_path(:followed_id => user.id), method: :post %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to '詳細', user_path(user), class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>