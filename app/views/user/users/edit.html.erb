<div class='main-container'>
  <div class="row">
    <div class="col-7 mb-3">
      <div class=main-subject>プロフィール編集</div>
        <%= form_with model:@user, local:true do |f| %>
          <label for="inputName">Name</label>
          <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
          <label for="inputImage">ProfileImage</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          <div><%= f.submit '変更を保存', class:"btn btn-outline-secondary" %></div>
        <% end %>
    </div>
  </div>
</div>