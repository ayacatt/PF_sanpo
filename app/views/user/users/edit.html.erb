<div class='main-container'>
  <div class='row'>
    <div class='col-md-5 offset-md-1'>
      <div class=main-subject>プロフィール編集</div>
        <%= form_with model:@user, local:true do |f| %>
        
      <div class="form-group">
        <%= f.label :title, 'ユーザ名' %>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: 'form-control' %>
      </div>
      <div class="form-group">
        <label for="inputImage">ユーザー画像</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div><%= f.submit '変更を保存', class:"btn btn-outline-secondary" %></div>
        <% end %>
    </div>
  </div>
</div>