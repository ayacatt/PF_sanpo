<div>
  <h3><%= @user.name %></h3>
  <p>投稿ユーザー画像：<%= attachment_image_tag @user, :profile_image, :fill, 100, 100 , fallback: "no_image.jpg" %></p>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<div class="col-md-8 offset-md-1">
<h2>自分の投稿一覧</h2>

  <table class="table table-hover table-inverse">
    
    <thead>
      <tr>
        <th></th>
        <th>スポット名</th>
        <th>説明</th>
        <th>コメント件数</th>
      </tr>
    </thead>

  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post_path(post.id) do %>
        <%= attachment_image_tag post, :image , :fill, 100, 100 , fallback: "no_image.jpg" %>
      <% end %>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.post_comments.count %></td>
    
    </tr>
    <% end %>
  <%= paginate @posts %>