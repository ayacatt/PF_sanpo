<div class='main-container'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <div class=main-subject>問い合わせ一覧</div>
      <table class='table'>
        <thead>
          <tr>
            <th>氏名</th>
            <th>問い合わせ日時</th>
            <th>対応ステータス</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.created_at.strftime('%Y/%m/%d %T') %></td>
              <td><%= contact.contact_status_i18n %></td>
              <td></td>
              <td><%= link_to '詳細', admin_contact_path(contact), class: "contact_#{contact.id}",class: "btn btn-outline-secondary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>